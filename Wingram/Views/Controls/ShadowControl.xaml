<Grid x:Class="Wingram.Views.Controls.ShadowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wingram.Views.Controls" UseLayoutRounding="True" SnapsToDevicePixels="True"
             mc:Ignorable="d" x:Name="ThisShadowControl">

    <Grid.Effect>
        <DropShadowEffect Direction="270" BlurRadius="100" Color="#FFE9EBEB" ShadowDepth="10"/>
    </Grid.Effect>
    <Grid.OpacityMask>
        <VisualBrush Visual="{Binding ElementName=BorderBack}"/>
    </Grid.OpacityMask>
    <Border CornerRadius="8" Opacity="0.8" x:Name="BorderBack">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#F4F6F7"/>
                <GradientStop Color="#EEEFF0" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
    </Border>

    <ContentControl Content="{Binding InnerContent, ElementName=ThisShadowControl}" />

</Grid>
